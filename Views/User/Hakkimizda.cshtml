@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<KullaniciTarafi.Models.Referanslar>
<section id="about" class="about section">
	@foreach (var referans in Model)
	{
		@if (!string.IsNullOrEmpty(referans.Hakkimizda))
		{
			<h2 class="hakkimizda-title">Hakkımızda</h2>
			<p class="hakkimizda">@referans.Hakkimizda</p>
		}

		<div class="content-container">
			@if (!string.IsNullOrEmpty(referans.Vizyon))
			{
				<div class="vizyon-container">
					<div class="vizyon-header">
						<i class="bi bi-stars icon"></i>
						<h2 class="vizyon-title">Vizyonumuz</h2>
					</div>
					<p class="vizyon">@referans.Vizyon</p>
				</div>
			}

			@if (!string.IsNullOrEmpty(referans.Misyon))
			{
				<div class="misyon-container">
					<div class="misyon-header">
						<i class="bi bi-stars icon"></i>
						<h2 class="misyon-title">Misyonumuz</h2>
					</div>
					<p class="misyon">@referans.Misyon</p>
				</div>
			}
		</div>
		<div class="footer">
			<p class="copy">
				Tüm Hakları Saklıdır ©2024
				<a href="http://kayahukuk.com.tr/" target="_blank">KH.</a>
			</p>
		</div>

	}
</section>
<style>
	#about .row {
		margin-top: 200px;
		background-color: gray;
	}

	#about {
		background-color: white;
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
	}

		#about .hakkimizda {
			text-indent: 20px;
			margin-top: 20px;
			margin-left: 300px;
			margin-right: 300px;
			z-index: 1;
			position: relative;
			font-size: 18px;
			margin-bottom: 25px;
			color: black;
		}

		#about .content-container {
			display: flex;
			justify-content: space-between;
			width: 80%;
		}

		#about .vizyon-container,
		#about .misyon-container {
			margin-top:45px;
			flex: 1;
			padding: 20px;
		}

		#about .vizyon-header,
		#about .misyon-header {
			display: flex;
			align-items: center; /* İkon ve başlığı dikeyde ortalar */
		}

		#about .icon {
			margin-right: 15px; /* İkon ile başlık arasına boşluk ekler */
			font-size: 24px; /* İkon boyutunu ayarlar */
			color: orange; /* İkon rengini ayarlar */
		}

		#about .vizyon-title,
		#about .misyon-title {
			margin: 0; /* Margin'i sıfırlar */
			font-size: 28px;
			color: orange;
		}

		#about .vizyon,
		#about .misyon {
			text-align: left; /* Metni sola hizalar */
			padding-left: 20px; /* Sol kenardan boşluk bırakır */
			margin-left: 20px; /* Sol kenardan uzaklık bırakır */
			font-size: 15px;
			color: black;
		}

		#about .hakkimizda-title {
			margin-top: 140px;
			font-size: 27px;
			color: orange;
		}

	.footer {
		width: 100%; /* Tam genişlik */
		background-color: white; /* Arka plan rengi */
		padding: 10px 0; /* Üst ve alt boşluk */
		text-align: left; /* Yazıyı ortala */
		position: relative;
		margin-top:180px;
	}

	.copy {
		margin: 0;
		font-size: 14px; /* Yazı boyutu */
	}

		.copy a {
			color: orange; /* Link rengi */
			text-decoration: none; /* Alt çizgi kaldır */
		}

			.copy a:hover {
				text-decoration: underline; /* Hover durumunda alt çizgi ekle */
			}
</style>

















